<body>
	<div class="container home-body">
        <figure align="center">
            <img class="logo-lg" src="img/logo.png"/>
        </figure>
        <br><br>
        <div class="greeting">
            <span id="greetingMessage"></span>!
        </div>
        <div class="day-summary">Please Log In</div>

        <div align="center">
            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
            </fb:login-button>
        </div>

        <br><br>
        <figure align="center">
            <img data-toggle="modal" data-target="#helpModal" class="info" src="img/info-icon.png"/>
        </figure>
    </div>

    {{> helpModal}}

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
