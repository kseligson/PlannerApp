<!doctype html>

<html>
<head>
	<title>People's Planner</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	<div class="navbar-wrapper">
        <div class="container">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" style="text-align: center"href="/">People's<br>Planner
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right" style="margin-top: 12px; text-align: right">
                        	<li><a href="/">Home</a></li>
                            {{#each nav-link}}
                                <li><a href="{{link}}">{{text}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

	<div class="container">
		<div class="page-header">
			<div class="row">
				<div class="col-xs-10 page-title">Tasks</div>
                <div class="col-xs-2 add-label"><a href="/newtask">+</a></div>
			</div>
		</div>
	</div>

    <div class="container" id="tasks-container">
        {{#each tasks}}
        <div class="task-div" id="task{{id}}" style="color:{{color}}; 
    border-color: {{color}};" >
            <div class="main-task"> <div class="task-name" contenteditable>{{name}}</div>
                <div class="removebtn">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{color}};" id="remove{{id}}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </div>

                <div class="editbtn">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{color}};" id="edit{{id}}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </div>

            </div>
            
            <div class="task-due">Due on <strong>{{date}}</strong> at <strong>{{time}}</strong></div>
            <div class="task-notes" id="notes{{id}}">{{notes}}</div>
        </div>
        {{/each}}
    </div>


    <div class="container" id="edit-task-container">
                <form role="form" id="new-task-form" style="color:#FFFFFF;"ls>
            <div class="form-group">
                <label for="taskName">Name</label>
                <input type="text" class="form-control" id="taskName" value="{{name}}">
            </div>
            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="startDate">Due Date</label>
                    <input type="date" class="form-control" id="startDate" value ="{{date}}">
                </div>
                <div class="form-group col-xs-6">
                    <label for="startTime">Time</label>
                    <input type="time" class="form-control" id="startTime" value="{{time}}">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-3">
                    <label for="taskColor">Color</label>
                    <input type="color" class="form-control" id="taskColor" >
                </div>
            </div>
            <div class="form-group">
                <label for="Notes">Notes</label>
                <textarea class="form-control" rows="3" id="taskNotes" value="{{notes}}"></textarea>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">Repeat Task
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-offset-2" id="customOptions">
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatDaily" value="daily">Daily
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatWeekly" value="weekly">Weekly
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatCustom" value="custom">Custom
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="taskRemind">Remind me
                    </label>
                </div>
            </div>
            <input id="submitbutn" class="btn btn-primary" align="center" type="submit" value="Save">
            <a href="/tasks" class="btn btn-default pull-right" type="button" value="Cancel">Cancel</a>
        </form>
    </div>
    
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <script >
        $(document).ready(function(){
            $('.task-div').click(function(){
                var taskID = $(this).closest('.task-div').attr('id');

                var idNumber = taskID.substr('task'.length);
                var notes = '#notes'+idNumber;

                $(notes).slideToggle("fast");
            });

            $("#edit-task-container").hide();
            $(".task-notes").hide();

            $('.removebtn').click(function(){
                var taskID = $(this).closest('.task-div').attr('id');

                var idNumber = taskID.substr('task'.length);

                $.post('/tasks/'+idNumber+'/delete', function() {
                    window.location.href = '/tasks';
                });

            });

            $('.editbtn').click(function() {
                console.log('asdada');
                var taskID = $(this).closest('.task-div').attr('id');
                var idNumber = taskID.substr('task'.length);

                 $("#edit-task-container").show();
                 $("#tasks-container").hide();

                
                 $.post('/tasks/'+idNumber+'/edit', {id: idNumber}, function() {
                });
            });
        });
    </script>

</body>
</html>
