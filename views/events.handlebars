<!-- temporary until fullcalendar/ajax implemented -->
        <div class="container" id="events-container">
        {{#each events}}
        <div class="event-div" id="event{{id}}" style="color:{{taskColor}}; 
    border-color: {{taskColor}};" >
            <div class="event-name">{{taskName}}
                <div class="removebtnEvent">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{taskColor}};" id="remove{{id}}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </div>

                <div class="editbtnEvent">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{taskColor}};" id="edit{{id}}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </div>

            </div>
            
            <div class="event-due">Date <strong>{{startDate}}</strong> through <strong>{{endDate}}</strong> at Time <strong>{{startTime}}</strong> through <strong>{{endTime}}</strong></div>
            <div class="event-notes" id="taskNotes{{id}}">{{taskNotes}}</div>
        </div>
        {{/each}}
    </div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
