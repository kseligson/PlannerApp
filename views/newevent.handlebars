<!doctype html>

<html>
<head>
	<title>People's Planner</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	{{> navbar}}

	<div class="container">
		<div class="page-header">
				<div class="page-title">New Event</div>
		</div>

		<form role="form" id="new-event-form">
            <div class="form-group">
                <label for="taskName">Name</label>
                <input type="text" class="form-control" id="taskName">
            </div>
            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="startDate">Start Date</label>
                    <input type="date" class="form-control" id="startDate">
                </div>
                <div class="form-group col-xs-6">
                    <label for="startTime">Start Time</label>
                    <input type="time" class="form-control" id="startTime">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="endDate">End Date</label>
                    <input type="date" class="form-control" id="endDate">
                </div>
                <div class="form-group col-xs-6">
                    <label for="endTime">End Time</label>
                    <input type="time" class="form-control" id="endTime">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xs-3">
                    <label for="taskColor">Color</label>
                    <input type="color" class="form-control" id="taskColor">
                </div>
            </div>
            <div class="form-group">
                <label for="taskNotes">Notes</label>
                <textarea class="form-control" rows="3" id="taskNotes"></textarea>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">Repeat Event
                    </label>
                </div>
            </div>
            <div class="form-group col-xs-offset-2" id="customOptions">
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatDaily" value="daily">Daily
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatWeekly" value="weekly">Weekly
                    </label>
                </div>
                <div class="radio-inline">
                    <label>
                        <input type="radio" name="repeatOptions" id="repeatCustom" value="custom">Custom
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox">Remind me
                    </label>
                </div>
            </div>
    		<input id="submitbutnEvent" class="btn btn-primary" align="center" type="submit" value="Save">
    		<a href="/events" class="btn btn-default pull-right" type="button" value="Cancel">Cancel</a>
    	</form>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <!--<script stc="/js/eve.js"></script> useless? -->
    <script>
        $('#new-event-form').submit(function(e) {
            e.preventDefault();

            var taskName = $('#new-event-form #taskName').val();
            var startDate = $('#new-event-form #startDate').val();
            var endDate = $('#new-event-form #endDate').val();
            var startTime = $('#new-event-form #startTime').val();
            var endTime = $('#new-event-form #endTime').val();
            var taskColor = $('#new-event-form #taskColor').val();
            var taskNotes = $('#new-event-form #taskNotes').val();
            var jsonEvent = {
                'taskName' : taskName,
                'startDate' : startDate,
                'endDate' : endDate,
                'startTime' : startTime,
                'endTime' : endTime,
                'taskColor' : taskColor,
                'taskNotes' : taskNotes
            };
           
            $.post('/events', jsonEvent, function() {
               //console.log(jsonEvent);
                   window.location.href = '/events';
            } );
        });
    </script>

    {{> facebook}}
    <script src="/js/facebook.js"></script>
    {{> googleAnalytics}}
</body>
</html>
