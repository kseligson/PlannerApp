<body>
	<div class="navbar-wrapper">
        <div class="container">
            <nav class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" style="text-align: center" href="/">People's<br>Planner
                        </a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right" style="margin-top: 12px; text-align: right">
                        	<li><a href="/">Home</a></li>
                            {{#each nav-link}}
                                <li><a href="{{link}}">{{text}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>

	<div class="settings-profile" >
			<figure align="center">
				<img class="img-circle" id="profile-picture" src="img/default.png"/>
			</figure>
		</div>

	<div class="container settings">
		<ul align="center">
			<li><button id="notif-toggle">Notifications</button></li>
			<li class="toggle-li">Email</li>
			<li class="toggle-li">Text</li>
			{{#each settings-list}}
			<li>
				<a href="/{{link}}">{{caption}}</a>
			</li>
			{{/each}}

		</ul>
	</div>
