<!doctype html>

<html>
<head>
	<title>People's Planner</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">
	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>
	{{> navbar}}

	<div class="container">
		<div class="page-header">
			<div class="row">
				<div class="col-xs-7 page-title">Tasks</div>
                <div class="col-xs-5 add-label"><a href="/newtask"><img class="img-responsive img-circle" id="add-btn" src="img/add-icon.png"/></a></div>
			</div>
		</div>
	</div>

    <div class="container" id="tasks-container">
        {{#each tasks}}
        <div class="task-div" id="task{{id}}" style="border-color: {{color}};" >
            <div class="main-task" style="color:{{color}};"> <div class="task-name" style="width: 50%; display: inline-block;">{{name}}</div>
                <div class="removebtn">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{color}};" id="remove{{id}}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                </div>

                <div class="editbtn">
                    <button type="button" class="btn btn-round" style="background-color:transparent; color:{{color}};" id="edit{{id}}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                </div>

            </div>
            
            <div class="task-due">Due on <strong>{{date}}</strong> at <strong>{{time}}</strong></div>
            <div class="task-notes" id="notes{{id}}">{{notes}}</div>
        </div>
        {{/each}}
    </div>

    
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <script >


        $(document).ready(function(){
            $('.task-div').click(function(){
                var taskID = $(this).closest('.task-div').attr('id');

                var idNumber = taskID.substr('task'.length);
                var notes = '#notes'+idNumber;

                $(notes).slideToggle("fast");
            });

            if($('.task-div').attr('id') == null) {
                console.log("ASDASDADAD");
                $(this).hide();
            }
            $(".task-notes").hide();

            $('.removebtn').click(function(){
                /**var taskID = $(this).closest('.task-div').attr('id');

                var idNumber = taskID.substr('task'.length);

                $.post('/tasks/'+idNumber+'/delete', function() {
                    window.location.href = '/tasks';
                });*/

                var taskID = $(this).closest('.task-div').attr('id');
                $("#"+taskID).hide();
            });

            $('.editbtn').click(function() {
                var taskID = $(this).closest('.task-div').attr('id');
                var idNumber = taskID.substr('task'.length);

                $.post('/edittask/'+idNumber, {id : idNumber} , function(){
                        window.location.href = '/edittask';
                });
            });

        });
    </script>

    {{> facebook}}
    <script src="/js/facebook.js"></script>
    {{> googleAnalytics}}
</body>
</html>
