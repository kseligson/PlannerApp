<body>
	{{> navbar}}

    <div class="container-acc">

        <div class="panel panel-primary">
            <div class="panel-heading">Notification Devices</div>
            <div class="panel-body">Phone Number: 1-800-000-0000</div>
            <div class="panel-body"><input type="phone" class="form-control" id="Phone" placeholder="Change Phone Number"></div>
            <div class="panel-body">Email: peopleplanner@gmail.com</div>
            <div class="panel-body"><input type="phone" class="form-control" id="Email" placeholder="Change Email"></div>
        </div>



        <div class= "panel panel-primary">
            <div class="panel-heading">Background URL</div>
            <div class="panel-body"><input type="text" class="form-control" id="background" placeholder="https://www.example.com">         
                    <input type="submit" id="bgsubmit">
            </div>
            <div class="panel-heading">Change Theme</div>
            <div class="panel-body"><input type="submit" id="themesubmit"></div>
        </div>


	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

    <script> 
    var themechanged = false;
     $(document).ready(function(){
            $('#bgsubmit').click(function(){
                var bg = $('#background').val();
                changeBG_URL(bg);
                });

            $('#themesubmit').click(function() {
                changeCSS('/css/project-light.css');
            });

        });

    function changeBG_URL(url){
        if(url != null) {
            var body= document.getElementsByTagName('body')[0];
            body.style.backgroundImage='url('+ url +') ';
        }
    }
          

    if(themechanged) {
        changeCSS('/css/project-light.css');
    }

    function changeCSS(cssFile) {
        var themechanged= true;
        var link = document.getElementById("mystyle");
        link.setAttribute('href', cssFile);


    }
    </script>

