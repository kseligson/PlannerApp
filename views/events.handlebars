    <!-- also added -->
    <script>
        $(document).ready(function(){
            $('.event-div').click(function(){
                var eventID = $(this).closest('.event-div').attr('id');

                var idNumber = eventID.substr('event'.length);
                var taskNotes = '#taskNotes' + idNumber;

                $(taskNotes).slideToggle("fast");

            });

            $(".event-notes").hide();

            $('.removebtnEvent').click(function(){
                var eventID = $(this).closest('.event-div').attr('id');

                var idNumber = eventID.substr('event'.length);

                $.post('/events/'+idNumber+'/delete', function() {
                   window.location.href = '/events';
                });

            });

            $('.editbtnEvent').click(function() {
                 $.post('/events/'+idNumber+'/delete', function() {
                    window.location.href = '/events';
                });
            });
        });
    </script>
    
